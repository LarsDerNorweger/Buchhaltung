{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2015.iterable",
      "es2015.symbol",
      "es2015.symbol.wellknown"
    ],
    "module": "ES2015",
    "moduleResolution": "classic",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./.out/",
    "removeComments": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
  },
  "watchOptions": {
    "synchronousWatchDirectory": true,
  },
  "include": [
    "src/**/*"
  ]
}